{
  "name": "Augmented YouTube",
  "version": "1.0.0",
  "description": "Augments your YouTube",
  "manifest_version": 2,
  "permissions": [
    "*://*.youtube.com/watch"
  ],
  "web_accessible_resources": [
    "img/*.png",
    "img/*.gif",
    "img/*.jpg",
    "img/*.svg",
    "css/*.css",
    "img/*/*.png"
  ],
  "homepage_url": "https://isthereanydeal.com/",
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/watch*"
      ],
      "js": [
        "js/lib/DOMPurify/purify.js",
        "js/config.js",
        "js/core.js",
        "js/content/content.js"
      ],
      "css": [
        "css/styles.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/lib/DOMPurify/purify.js",
      "js/config.js",
      "js/core.js",
      "js/background/background.js"
    ]
  }
}
